<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/aboutlayout"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:id="@+id/linearLayout"
            android:background="@color/white">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/intrologo"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanara Daivandya Association"
                android:textSize="23dp"
                android:gravity="center"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----- Mumbai -----"
                android:textSize="19dp"
                android:gravity="center"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estd. 1959                                  Regd. 1960"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:textColor="@color/intro_title_color"
                android:textStyle="bold"/>

            <!-- AboutToolbar -->
            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="330dp"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:background="@drawable/curve_background">

                <RelativeLayout
                    android:id="@+id/org"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="#07c7b2">
                </RelativeLayout>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/org"
                    android:text="About KDA"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#385a64"
                    android:layout_toRightOf="@id/org" />

                <TextView
                    android:layout_below="@id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Its a community of all people from DAIVADNYA SAMAJ"

                    android:layout_toEndOf="@id/org"
                    android:layout_marginTop="10dp"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/org" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/two"
                android:layout_below="@id/one"
                android:layout_width="330dp"
                android:layout_height="300dp"
                android:elevation="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/curve_background">

                <RelativeLayout
                    android:id="@+id/pur"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="#e2f7aa">
                </RelativeLayout>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/pur"
                    android:text="About KDA"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#385a64"
                    android:layout_toRightOf="@id/pur" />

                <TextView
                    android:layout_below="@id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paragraph"
                    android:layout_toEndOf="@id/pur"
                    android:layout_marginTop="10dp"
                    android:textColor="#385a64"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/pur" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>

