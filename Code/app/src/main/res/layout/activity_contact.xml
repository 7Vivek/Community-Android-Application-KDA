<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/aboutlayout"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:id="@+id/linearLayout"
            android:background="@color/white">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/intrologo"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanara Daivandya Association"
                android:textSize="23dp"
                android:gravity="center"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----- Mumbai -----"
                android:textSize="19dp"
                android:gravity="center"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estd. 1959                                  Regd. 1960"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:textColor="@color/intro_title_color"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:layout_marginTop="25dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textColor="#076c78"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:background="@drawable/adminedittext"
                android:hint="What do you want to discuss about ?"
                android:id="@+id/edit_text_subject"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="16dp"
                android:maxLength="2"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textColor="#076c78"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:background="@drawable/adminedittext"
                android:hint="Please describe the problem in details.\n In case you like app."
                android:id="@+id/edit_text_message"
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:maxLines="10"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/button_send"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_admin"
                android:text="SEND"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>

