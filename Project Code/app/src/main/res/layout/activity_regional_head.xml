                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/athree"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:background="@drawable/curve_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingStart="225dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/adminthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="viveklimbad1010@gmail.com"
                    android:textColor="@color/bluelink"
                    android:layout_alignParentBottom="true"
                    android:textSize="16dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/tab_indicator_gray"
                    android:src="@drawable/userprofile"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:background="@color/gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You may contact us regarding any issue at"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#076c78"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/adminkda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kda1959@gmail.com"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/bluelink"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>

