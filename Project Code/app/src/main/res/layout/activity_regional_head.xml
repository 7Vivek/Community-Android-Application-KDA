<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/aboutlayout"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:id="@+id/linearLayout"
            android:background="@color/white">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/intrologo"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanara Daivandya Association"
                android:textSize="23dp"
                android:gravity="center"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----- Mumbai -----"
                android:textSize="19dp"
                android:gravity="center"
                android:textColor="@color/colordarkblue"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estd. 1959                                  Regd. 1960"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:textColor="@color/intro_title_color"
                android:textStyle="bold"/>

            <!-- AboutToolbar -->
            <RelativeLayout
                android:id="@+id/aone"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:background="@drawable/curve_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingStart="225dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/adminone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="limbadsneha777@gamil.com"
                    android:textColor="@color/bluelink"
                    android:layout_alignParentBottom="true"
                    android:textSize="16dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/tab_indicator_gray"
                    android:src="@drawable/userprofile"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/atwo"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:background="@drawable/curve_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingStart="225dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/admintwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="viveklimbad1010@gmail.com"
                    android:layout_alignParentBottom="true"
                    android:textSize="16dp"
                    android:textColor="@color/bluelink"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:gravity="right" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/tab_indicator_gray"
                    android:src="@drawable/userprofile"
